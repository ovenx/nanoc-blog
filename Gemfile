source "https://gems.ruby-china.com/"

gem 'nanoc', '~> 4.11'

gem 'slim'

gem 'sass'

gem 'pandoc-ruby'

# nanoc plugins
gem 'nanoc-toolbox'
gem 'typogruby'

# js/css minify
gem 'rainpress'
gem 'uglifier'

# busting web browser's cache when js/css file changes.
gem 'nanoc-cachebuster'

# basic requirement for `nanoc view` command
gem 'adsf'

# require by Nanoc::Helpers::XMLSitemap
gem 'builder'

gem 'nokogiri'

gem 'stringex'

gem 'highline'

gem 'systemu'


# debugging
group :development do
  gem 'rake'
  gem 'pry'
  gem 'pry-byebug'
  gem 'guard-nanoc'
  gem 'guard-bundler', :require => false
end
